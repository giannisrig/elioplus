                                                +olItem('Changes to our Privacy Policy', '#section12')
                                        div(class='divider bg-gray h-[2px]')
                                        div(class='gap-20px lg:gap-25px pl-30px').flex.flex-col.w-full
                                            h3(class='text-xl lg:text-2.5xl font-inter font-bold') Legal
                                            .flex.flex-col.gap-10px.w-full
                                                a(href='../templates/terms-and-conditions.html' class='text-base lg:font-[17px]').text-blue.font-semibold.underline Terms & Conditions
                                                a(href='../templates/myData.html' class='text-base lg:font-[17px]').text-blue.font-semibold.underline Do not sell my data
                                                a(href='../templates/faq.html' class='text-base lg:font-[17px]').text-blue.font-semibold.underline Frequently asked questions
