mixin tableItem(name, country, company, looking, size, hidden)
    -var extraClass = ''
    if hidden
        - extraClass = ' extra hidden'

    tr(class='text-sm lg:text-base font-medium mdl:font-bold'+extraClass)
        td=name
        td
            .flex.w-full.justify-start
                - var img= '../assets/images/flags/US.svg'
                - var name='United States'
                - var href='#'
                include components/global/country.pug
        td
            .flex.items-center.justify-start.gap-5px
                img(src='../assets/images/intent-signals/loqate.png' alt='company logo' loading='lazy' class='hidden mdl:block')
                div=company
        td
